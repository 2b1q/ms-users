{
  "type": "object",
  "required": [
    "prefix",
    "amqp",
    "redis"
  ],
  "properties": {
    "debug": {
      "type": "boolean"
    },
    "prefix": {
      "type": "string",
      "minLength": 1
    },
    "postfix": {
      "type": "object",
      "properties": {
        "ban": {
          "type": "string",
          "minLength": 1
        },
        "challenge": {
          "type": "string",
          "minLength": 1
        },
        "activate": {
          "type": "string",
          "minLength": 1
        },
        "verify": {
          "type": "string",
          "minLength": 1
        },
        "login": {
          "type": "string",
          "minLength": 1
        },
        "logout": {
          "type": "string",
          "minLength": 1
        },
        "register": {
          "type": "string",
          "minLength": 1
        },
        "getMetadata": {
          "type": "string",
          "minLength": 1
        },
        "updateMetadata": {
          "type": "string",
          "minLength": 1
        },
        "requestPassword": {
          "type": "string",
          "minLength": 1
        },
        "updatePassword": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "amqp": {
      "type": "object"
    },
    "redis": {
      "type": "object",
      "required": [ "hosts" ],
      "properties": {
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "host", "port" ],
            "properties": {
              "host": {
                "type": "string",
                "format": "ipv4"
              },
              "port": {
                "oneOf": [
                  { "type": "integer" },
                  { "type": "string" }
                ]
              }
            }
          }
        },
        "options": {
          "type": "object"
        }
      }
    },
    "logger": {
      "oneOf": [
        { "type": "boolean" },
        { "type": "object" }
      ]
    }
  }
}